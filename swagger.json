{
  "openapi": "3.0.0",
  "info": {
    "title": "Jobs API",
    "version": "1.0",
    "description": "The **Jobs Portal API** allows users to register, log in, and manage job listings. Authenticated users can create, view, update, and delete jobs. The API uses JWT-based authentication to protect job-related endpoints.\n\n## Features\n- User registration and login\n- JWT authentication\n- Create, read, update, and delete job postings\n- Protected routes for job management\n\n. This API is intended for use in web and mobile applications that require job management functionality.\n\n[ðŸ”— Follow VybeCoder on X (Twitter)](https://x.com/vybe_coder)",

    "contact": {
      "name": "VybeCoder"
    }
  },
  "servers": [
    {
      "url": "https://jobsapi-q57r.onrender.com/api/v1"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register User",
        "operationId": "RegisterUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register-user-Request"
              },
              "example": {
                "name": "Vybe",
                "email": "vybecder@gmail.com",
                "password": "vybecoder"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User registered successfully" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login User",
        "operationId": "LoginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login-user-Request"
              },
              "example": {
                "email": "vybecoder@gmail.com",
                "password": "vybecoder"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User logged in successfully" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/jobs": {
      "post": {
        "tags": ["Jobs"],
        "summary": "Create Job",
        "operationId": "CreateJob",
        "security": [{ "bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Create-job-Request"
              },
              "example": {
                "company": "Google",
                "position": "Intern"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Job created successfully" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "get": {
        "tags": ["Jobs"],
        "summary": "Get All Jobs",
        "operationId": "GetAllJobs",
        "security": [{ "bearer": [] }],
        "responses": {
          "200": { "description": "List of jobs" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/jobs/{id}": {
      "get": {
        "tags": ["Jobs"],
        "summary": "Get Single Job",
        "operationId": "GetSingleJob",
        "security": [{ "bearer": [] }],
        "responses": {
          "200": { "description": "Job details" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "patch": {
        "tags": ["Jobs"],
        "summary": "Update Job",
        "operationId": "UpdateJob",
        "security": [{ "bearer": [] }],
        "responses": {
          "200": { "description": "Job updated successfully" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "delete": {
        "tags": ["Jobs"],
        "summary": "Delete Job",
        "operationId": "DeleteJob",
        "security": [{ "bearer": [] }],
        "responses": {
          "200": { "description": "Job deleted successfully" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Register-user-Request": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Login-user-Request": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Create-job-Request": {
        "type": "object",
        "required": ["company", "position"],
        "properties": {
          "company": { "type": "string" },
          "position": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Invalid request",
        "content": {
          "application/json": {
            "example": {
              "error": "Bad Request",
              "message": "Invalid or missing parameters"
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Authentication required or invalid token",
        "content": {
          "application/json": {
            "example": {
              "error": "Unauthorized",
              "message": "You must be logged in to perform this action"
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "example": {
              "error": "Not Found",
              "message": "Job not found"
            }
          }
        }
      },
      "ServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "example": {
              "error": "Server Error",
              "message": "Something went wrong"
            }
          }
        }
      }
    }
  },
  "tags": [{ "name": "Auth" }, { "name": "Jobs" }]
}
